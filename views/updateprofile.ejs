<%-include('user_header.ejs');%>
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
   
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 
   <!----  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">  -->
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="css/stylespassword.css">
  

    <title></title>
  
     
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Update Profile Page</h3>
                  <form action="updatesuccess" method="post">
      
                    <div class="row">
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline">
                          <input type="text" id="firstName" name="firstName" maxlength="50" class="form-control form-control-lg" value="<%=user.first_name%>" required />
                          <label class="form-label" for="firstName">First Name</label>
                        </div>
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline">
                          <input type="text" id="lastName"  name="lastName" maxlength="50"  class="form-control form-control-lg" value="<%=user.last_name%>" required />
                          <label class="form-label" for="lastName">Last Name</label>
                        </div>
      
                      </div>
                    </div>
      
                    <div class="row">
                      <div class="col-md-6 mb-4 d-flex align-items-center">
      
                        <div class="form-outline datepicker w-100">
                          <input
                            type="date"
                            class="form-control form-control-lg"
                            id="birthdayDate" name="birthdayDate" value="<%=user.niceDate%>" required/>
                          <label for="birthdayDate" class="form-label">Birthday</label>
                        <!--<%=user.dob%>-->
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <h6 class="mb-2 pb-1">Gender: </h6>
      
                        <div class="form-check form-check-inline">
                          <input
                            class="form-check-input"
                            type="radio"
                            name="inlineRadioOptions"
                            id="femaleGender"
                            name="Gender"
                            value="F"
                            <%= user.gender=='F' ? 'checked' : '' %>
                          />
                          <label class="form-check-label" for="femaleGender">Female</label>
                        </div>
                  
      
                        <div class="form-check form-check-inline">
                          <input
                            class="form-check-input"
                            type="radio"
                            name="inlineRadioOptions"
                            id="maleGender"
                            name="Gender"
                            value="M"
                            <%= user.gender=='M' ? 'checked' : '' %>
                          />
                          <label class="form-check-label" for="maleGender">Male</label>
                        </div>
                      
                        <div class="form-check form-check-inline">
                          <input
                            class="form-check-input"
                            type="radio"
                            name="inlineRadioOptions"
                            id="otherGender"
                            name="Gender"
                            value="O"
                            <%= user.gender=='O' ? 'checked' : '' %>
                          />
                          <label class="form-check-label" for="otherGender">Other</label>
                        </div>
      
                      </div>
                    </div>
      
                    <div class="row">
                      <div class="col-md-6 mb-4 pb-2">
      
                        <div class="form-outline">
                          <input type="text" id="Address" name="Address" maxlenghth="500" class="form-control form-control-lg" value="<%=user.address%>" required/>
                          <label class="form-label" for="Address">Address</label>
                        </div>
      
                      </div>
                      
                    </div>
                   
                    <div class="mt-0 pt-0">
                      <input class="btn btn-primary btn-lg" type="submit" id="btnSubmit" value="Update Profile"  />
                     
                    </div>
      
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</head><body>
   
</body>
</html>
<%-include('footer.ejs');%>